<%- include('../partials/header') %>

<div class="container mb-5">
    <div class="row">
        <div class="col-md-10 col-lg-8 offset-md-1 offset-lg-2">
            <div class="card">
                <div class="card-header text-center">
                    <h3 class="mb-0">Edit Trail - <%= trail.name %></h3>
                </div>
                <div class="card-body">
                    <form action="/trails/<%= trail._id %>?_method=PUT" method="POST">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="name">Trail Name</label>
                                <input class="form-control" id="name" type="text" name="trail[name]" value="<%= trail.name %>">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="location">Location</label>
                                <input class="form-control" id="location" type="text" name="trail[location]" value="<%= trail.location %>">
                            </div>
                            <div class="form-group col-12">
                                <label for="url">Image URL</label>
                                <input class="form-control" id="url" type="text" name="trail[image]" value="<%= trail.image %>">
                            </div>
                            <div class="form-group col-6">
                                <label for="distance">Distance</label>
                                <div class="input-group">
                                    <input class="form-control" id="distance" type="number" step="0.01" name="trail[distance]" value="<%= trail.distance %>">
                                    <div class="input-group-append">
                                        <div class="input-group-text">km</div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-6">
                                <label for="elevation-gain">Elevation Gain</label>
                                <div class="input-group">
                                    <input class="form-control" id="elevation-gain" type="number" name="trail[elvagain]" value="<%= trail.elvagain %>">
                                    <div class="input-group-append">
                                        <div class="input-group-text">m</div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-6">
                                <label for="route-type">Route Type</label>
                                <select class="form-control" id="route-type" name="trail[type]">
                                    <!-- select previous option  -->
                                    <% const types = ["Loop", "Point to Point"]; 
                                       for (var i of types) {
                                        selected = (i === trail.type) ? "selected" : "";
                                    %>
                                    <option value="<%= i %>" <%= selected %>><%= i %></option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="form-group col-6">
                                <label for="difficulty">Difficulty</label>
                                <select class="form-control" id="difficulty" name="trail[difficulty]">
                                    <!-- select previous option  -->
                                    <% const difficulties = ["Easy", "Moderate", "Hard"]; 
                                       for (var i of difficulties) {
                                        selected = (i === trail.difficulty) ? "selected" : "";
                                    %>
                                    <option value="<%= i %>" <%= selected %>><%= i %></option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="form-group col-12">
                                <label for="description">Description</label>
                                <textarea class="form-control" id="description" rows="6" name="trail[description]"><%= trail.description %></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <input class="btn btn-block btn-primary" type="submit" value="Save Changes">
                        </div>
                    </form>
                    <a href="/trails" class="btn btn-block btn-secondary">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>