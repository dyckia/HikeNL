<%- include('../partials/header') %>

<div class="container">
    <h1 class="text-center mb-4">Create a New Trail</h1>
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <form action="/trails" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="trailName" placeholder="Trail Name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="imgUrl" placeholder="Image URL">
                </div>
				<div class="form-group">
					<textarea class="form-control" rows="7" name="trailDesc" placeholder="Description about the trail"></textarea>
				</div>
				<div class="form-group">
					<input class="btn btn-primary btn-block" type="submit">
				</div>
            </form>
            <a href="/trails">Go Back</a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>