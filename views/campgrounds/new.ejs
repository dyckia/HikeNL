<% include ../partials/header %>

<div class="container">
    <h1 class="text-center mb-4">Create a New Campground</h1>
    <div class="row justify-content-center">
        <div class="col-md-5">
            <form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="campName" placeholder="Campground Name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="imgUrl" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="Price $0.00" min="0" step="0.01">
                </div>
				<div class="form-group">
					<textarea class="form-control" rows="7" name="campDesc" placeholder="Description about the campground"></textarea>
				</div>
				<div class="form-group">
					<input class="btn btn-primary btn-block" type="submit">
				</div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>