<% include ../partials/header %>

<div class="container mb-5">
	<div class="row">
		<div class="col-md-3">
			<h3 class="mb-3">
				YelpCamp
			</h3>
			<ul class="list-group">
				<li class="list-group-item active">Category 1</li>
				<li class="list-group-item">Category 2</li>
				<li class="list-group-item">Category 3</li>
			</ul>
		</div>
		<div class="col-md-9">
			<div class="card mb-4">
				<img class="card-img-top" src="<%= campground.image %>">
				<div class="card-body">
					<div class="d-flex justify-content-between mb-2">
						<h5>
							<a href="#">
								<%= campground.name %>
							</a>
						</h5>
						<h5>
							$<%= campground.price %>/Night
						</h5>
					</div>
					<p><%= campground.description %></p>
					<p><em>Submitted by <%= campground.author.username %></em></p>
					<% if (currentUser && campground.author.id.equals(currentUser._id)) { %>
						<a class="mr-2 btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">
							Edit
						</a>
						<form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
							<input class="btn btn-danger" type="submit" value="Delete">
						</form>
					<% } %>
				</div>
			</div>
			<div class="card bg-light">
				<div class="card-header">
					<div class="d-flex justify-content-between align-items-center mx-1">
						<h5>Comments</h5>
						<a class="btn btn-info" href="/campgrounds/<%= campground._id %>/comments/new">Write A Comment</a>
					</div>
				</div>
				<div class="card-body">
					<% campground.comments.forEach( (comment) => { %>
						<ul class="list-group list-group-flush">
							<li class="list-group-item bg-light">
								<div class="d-flex justify-content-between">
									<h6 class="mb-1"><%= comment.author.username %></h6>
									<small>3 days ago</small>
								</div>
								<p class="mb-1"><%= comment.text %></p>
								<% if (currentUser && comment.author.id.equals(currentUser._id)) { %>
									<div class="mt-2">
										<a class="btn btn-warning btn-sm mr-2" href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit">Edit</a>
										<form class="d-inline" action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
											<button class="btn btn-danger btn-sm">
												Delete
											</button>
										</form>
									</div>
								<% } %>
							</li>
						</ul>
					<% }); %>
				</div>
			</div>
		</div>
	</div>
</div>

<% include ../partials/footer %>