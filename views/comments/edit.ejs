<%- include('../partials/header') %>

<div class="container mb-5">
    <div class="row">
        <div class="col-md-10 col-lg-6 offset-md-1 offset-lg-3">
            <div class="card">
                <div class="card-header text-center">
                    <h3 class="mb-0">Edit Comment</h3>
                </div>
                <div class="card-body">
                    <form action="/trails/<%= trailId %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                        <div class="row">
                            <div class="form-group col-10 offset-1 mt-3">
                                <textarea class="form-control" rows="3" name="comment[text]"><%= comment.text %></textarea>
                            </div>
                            <div class="form-group col-10 offset-1 mt-3">
                                <input class="btn btn-primary btn-block" type="submit" value="Save Changes">
                            </div>
                        </div>
                    </form>
                    <div class="row">
                        <div class="col-10 offset-1 mb-4">
                            <a href="/trails/<%= trailId %>" class="btn btn-block btn-secondary">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>