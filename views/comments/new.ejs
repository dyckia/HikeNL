<%- include('../partials/header') %>

<div class="container">
    <h1 class="text-center mb-4">New Comment to <%= trail.name %></h1>
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <form action="/trails/<%= trail._id %>/comments" method="POST">
				<div class="form-group">
					<textarea class="form-control" rows="3" name="comment[text]" placeholder="Comment"></textarea>
				</div>
				<div class="form-group">
					<input class="btn btn-primary btn-block" type="submit">
				</div>
            </form>
            <a href="/trails/<%= trail._id %>">Go Back</a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>